<% include partials/header %>
<section id="contact">
  <div class="container">
      <h2 class="section-heading"> Deseja falar com a nossa equipe?</h2>
      <h3>Entre em contato com a Alltleta!</h3>
      <form action="/contato" method="post" id="contactForm">
          <div class="form-group col-xs-12">
              <label for="exampleInputEmail2">Nome</label>
              <input type="text" name="nome" class="form-control" id="exampleInputEmail2" placeholder="Seu Nome" required>
          </div>
          <div class="form-group col-xs-6">
              <label for="exampleInputEmail2">Telefone de contato</label>
              <input type="text" name="phone" class="form-control" id="exampleInputEmail2" placeholder="(99) 99999999 ">
          </div>
          <div class="form-group col-xs-6">
              <label for="exampleInputEmail2">Email</label>
              <input type="email" name="email" class="form-control" id="exampleInputEmail2" placeholder="joao@example.com" required>
          </div>
          <div class="form-group col-xs-12">
            <label for="exampleInputEmail2">Texto</label>
            <textarea name="text" class="form-control" rows="3" placeholder="O que deseja falar conosco?"></textarea>
          </div>
          <div id ="centerButton">
            <button type="submit" class="btn btn-success btn-sm" name="personalSubmit" value="Submit"> Enviar</button>
          </div>
      </form>
  </div>
</section>
<% include partials/footer %>
