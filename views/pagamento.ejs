                    <input type="hidden" name="code" value="DFBCD1DF0404335BB4506FB20DA7BA32" />
                    <input name="itemAmount1" type="hidden" value="10.00">
                    <input name="itemQuantity1" type="hidden" value="<%= data.quant %>">
                    <input type="hidden" name="iot" value="button" />
                    <button id="confButton" type="submit" name="submit" class="btn btn-primary btn-lg"> CONFIRMAR  </button>
                  </form>
                  <script type="text/javascript" src="https://stc.pagseguro.uol.com.br/pagseguro/api/v2/checkout/pagseguro.lightbox.js"></script>
                  <!-- FINAL FORMULARIO BOTAO PAGSEGURO -->

              </div>
              <div class="text-center">
                <a id="incorrect" href="javascript:history.back()">Dados incorretos?</a>
              </div>
            </div>
          </div>
      </div>
  </div>
